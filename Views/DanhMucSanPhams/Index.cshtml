@model IEnumerable<MyPhamCheilinus.Models.DanhMucSanPham>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenDanhMuc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MoTa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HinhAnh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DanhGia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaCtloaiNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaHangNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenDanhMuc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HinhAnh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DanhGia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaCtloaiNavigation.MaCtloai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaHangNavigation.MaHang)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaDanhMuc">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaDanhMuc">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaDanhMuc">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
