                                    @if (Model.HasPreviousPage)
                                    {
                                        <li><a href="@Url.Action("DanhMucSanPham", new { mahang = ViewBag.Mahang, page = 1 })">&lt;&lt; Đầu</a></li>
                                        <li><a href="@Url.Action("DanhMucSanPham", new { mahang = ViewBag.Mahang, page = Model.PageNumber - 1 })">&lt; Trước</a></li>
                                    }

                                    <li><a href="@Url.Action("DanhMucSanPham", new { mahang = ViewBag.Mahang, page = 1 })">1</a></li>

                                    @if (Model.PageNumber > 3)
                                    {
                                        <li><span>...</span></li>
                                    }

                                    @for (int i = Model.PageNumber - 1; i <= Model.PageNumber + 1; i++)
                                    {
                                        if (i > 1 && i < Model.PageCount)
                                        {
                                            <li><a class="@(i == Model.PageNumber ? "active" : "")" href="@Url.Action("DanhMucSanPham", new { mahang = ViewBag.Mahang, page = i })">@i</a></li>
                                        }
                                    }

                                    @if (Model.PageNumber < Model.PageCount - 2)
                                    {
                                        <li><span>...</span></li>
                                    }

                                    @if (Model.PageCount > 1)
                                    {
                                        <li><a class="@(Model.PageCount == Model.PageNumber ? "active" : "")" href="@Url.Action("DanhMucSanPham", new { mahang = ViewBag.Mahang, page = Model.PageCount })">@Model.PageCount</a></li>
                                    }

