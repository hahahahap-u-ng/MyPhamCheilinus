<script>
    $(document).ready(function () {
        var minPrice = 0;
        var maxPrice = 500000;
        var selectedTag = null;
        var selectedClick = null;

        // Cập nhật thanh trượt và ô nhập giá
        $("#slider-range").slider({
            range: true,
            min: 0,
            max: 500000,
            values: [minPrice, maxPrice],
            slide: function (event, ui) {
                $("#amount").val(ui.values[0] + " - " + ui.values[1]);
            }
        });

        $("#amount").val(minPrice + " - " + maxPrice);


        // Xử lý sự kiện khi thanh trượt thay đổi
        $("#slider-range").on("slidechange", function (event, ui) {
            minPrice = ui.values[0];
            maxPrice = ui.values[1];
            filterProducts();
        });

        // Xử lý sự kiện khi người dùng bấm vào thẻ
        $(".tag-filter").on("click", function (e) {
            e.preventDefault();
            selectedTag = $(this).data("tag");
            filterProducts();
        });

        // Xử lý sự kiện khi người dùng bấm vào đoạn click
        $(".click-filter").on("click", function (e) {
            e.preventDefault();
            selectedClick = $(this).data("click");
            filterProducts();
        });

        function filterProducts() {
            $.ajax({
                url: '@Url.Action("FilterByPriceAndTag", "Home")',
                type: 'GET',
                data: {
                    minPrice: minPrice,
                    maxPrice: maxPrice,
                    tag: selectedTag,
                    click: selectedClick
                },
                success: function (data) {
                    $('#product-list').html(data);
                },
                error: function () {
                    alert('Có lỗi xảy ra khi tải dữ liệu sản phẩm.');
                }
            });
        }
    });

</script>







