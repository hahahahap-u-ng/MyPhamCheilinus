@model List<MyPhamCheilinus.Models.DonHang>
@{
    ViewData["Title"] = "San Pham Theo Hang";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";

}
@foreach (var donhang in Model)
{
    <p>MaDonHang: @donhang.MaDonHang, TongTien: @donhang.TongTien, TrangThaiDonHang: @donhang.TrangThaiDonHang, NgayDatHang: @donhang.NgayDatHang</p>
}



<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Responsive Hover Table</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Mã đơn hàng</th>
                            <th>Thời gian đặt</th>
                            <th>Trạng thái</th>
                            <th>Thành tiền</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var donhang in Model)
                        {
                            
                        
                        <tr>
                                <td>@donhang.MaDonHang</td>
                                <td> @donhang.NgayDatHang</td>
                                <td> @donhang.TrangThaiDonHang</td>
                                <td>@donhang.TrangThaiDonHang</td>
                            <td>Chi tiết</td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>