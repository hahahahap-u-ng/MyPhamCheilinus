@model MyPhamCheilinus.Models.ChiTietDonHang
<h1>@ViewBag.Currentid</h1>
<h1>@ViewBag.Currentid1</h1>
<h1>@ViewBag.Currentid2</h1>
<h1>@ViewBag.Currentid3</h1>
<div class="modal-header">
    <h5 class="modal-title">THÔNG TIN ĐƠN HÀNG</h5>
    <button type="button" class="close" data-dismiss="modal" arial-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">THÔNG TIN ĐƠN HÀNG #@Model.MaDonHang</h4>
            <div class="table-responsive">
                <table class="product-info-table m-t-20">
                    <tbody>
                        <tr>
                            <td>ID: </td>
                            <td class="text-dark font-weight-semibold">#@Model.MaDonHang</td>
                        </tr>
                        <tr>
                            <td>Ngày mua hàng: </td>
                            <td> @Model.MaDonHangNavigation.NgayDatHang</td>
                        </tr>
                        <tr>
                            <td>Khách hàng: </td>
                            <td> @Model.MaDonHangNavigation.MaKhachHangNavigation.TenKhachHang</td>
                        </tr>
                        <tr>
                            <td>Số điện thoại: </td>
                            <td> @Model.MaDonHangNavigation.MaKhachHangNavigation.SoDienThoai</td>
                        </tr>
                        <tr>
                            <td>Địa chỉ: </td>
                            <td> @Model.MaDonHangNavigation.MaKhachHangNavigation.DiaChi</td>
                        </tr>
                        <tr>
                            <td>TỔNG TIỀN: </td>
                            <td> @Model.MaDonHangNavigation.TongTien.Value.ToString("#,##0")</td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <form asp-area="Admin" asp-controller="ChiTietDonHangs" asp-action="ChangeStatus" asp-route-id="@ViewBag.Currentid" asp-route-id1="@ViewBag.Currentid1" method="=post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input type="hidden" asp-for="MaDonHang" />
                <input type="hidden" asp-for="MaSanPham" />
                        <div class="row">
                            <div class="col-md-6">
                        <div class="row">
                            
                            <div class="form-group col-md-6">
                                <label class="font-weight-semibold" for="productName">Số lượng tồn kho</label>
                                <input type="number" class="form-control" asp-for="GiaBan" step="1">
                            </div>
                        </div>
                            </div>
                        </div>
                        
                        <button type="submit" class="btn btn-success">Lưu thay đổi</button>
                    </form>
                </div>
            </div>
        </div>

</div>
